- title = "Potato Labs"
- description = "Turn your ideas into reality"
- longTitle = title + " | " + description

doctype html
html(lang="en")
  head
    title #{longTitle}

    meta(name='google-site-verification', content='s-xo6GnoeE2sD61e5pf6HhfAtYUM6sIHNzPZl98Kow8')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='#{description}')
    meta(name='keywords', content='software,technology,freelance,consulting,elixir,phoenix,ruby,rails,react,restaurant,ecommerce,mobile,custom,revenue,increase,profit,franchise,technical,solutions,modern,business,startup,contract,developer,development,web,website,cms,store,online,app,application,money,more')

    link(href='./assets/favicon/favicon-96x96.png', rel='shortcut icon', type='image/x-icon')
    link(href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css", rel='stylesheet')
    link(href='/style.css', rel='stylesheet')

    // Facebook
    meta(property='og:site_name', content='#{title}')
    meta(property='og:title', content='#{title}')
    meta(property='og:description', content='#{description}')
    meta(property='og:url', content='http://')
    meta(property='og:image', content='./assets/images/logo.png')
    meta(property='og:type', content='website')

    // Twitter
    meta(name='twitter:card', content='app')
    meta(name='twitter:title', content='#{title}')
    meta(name='twitter:description', content='#{description}')
    meta(name='twitter:image:src', content='./assets/images/logo.png')
    meta(name='twitter:domain', content='http://')
    meta(name='twitter:app:name:iphone', content='Potato Labs')
    meta(name='twitter:app:id:iphone', content='1219237103')
    meta(name='twitter:app:name:ipad', content='Potato Labs')
    meta(name='twitter:app:id:ipad', content='1219237103')
